<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_new_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="86dp"
        android:src="@drawable/ic_note_add_white_36dp"
        android:visibility="invisible"
        app:backgroundTint="@color/green_900" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_new_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="67dp"
        android:layout_marginRight="70dp"
        android:src="@drawable/ic_add_a_photo_white_36dp"
        android:visibility="invisible"
        app:backgroundTint="@color/green_900" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_new_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="86dp"
        android:src="@drawable/ic_add_alarm_white_36dp"
        android:visibility="invisible"
        app:backgroundTint="@color/green_900" />

</FrameLayout>