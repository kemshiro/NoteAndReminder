<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TableRow
        android:id="@+id/tbr_color_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:weightSum="7">

        <com.k3mshiro.knotes.customview.SquareButton
            android:id="@+id/btn_red"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/red_circle_bg" />

        <com.k3mshiro.knotes.customview.SquareButton
            android:id="@+id/btn_orange"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/orange_circle_bg" />

        <com.k3mshiro.knotes.customview.SquareButton
            android:id="@+id/btn_yellow"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/yellow_circle_bg" />

        <com.k3mshiro.knotes.customview.SquareButton
            android:id="@+id/btn_green"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/green_circle_bg" />

        <com.k3mshiro.knotes.customview.SquareButton
            android:id="@+id/btn_blue"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/blue_circle_bg" />

        <com.k3mshiro.knotes.customview.SquareButton
            android:id="@+id/btn_indigo"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/indigo_circle_bg" />

        <com.k3mshiro.knotes.customview.SquareButton
            android:id="@+id/btn_violet"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/violet_circle_bg" />

    </TableRow>
</android.support.v7.widget.CardView>